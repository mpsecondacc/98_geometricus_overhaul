<!--Section: Contact v.2-->
<section class="" id="kontakt-forma">
    <div class="container bg-white">
        
    <!--Section heading-->
    <p class="text-center w-responsive mx-auto mb-5 mt-5 pt-5">Imate upit vezan za naše usluge? Slobodno nam se obratite putem kontakt obrasca, a mi ćemo vam odgovoriti u najkraćem mogućem roku.</p>
    <h2 class="h1-responsive font-weight-bold text-center my-4">KONTAKTIRAJTE NAS!</h2>
    <!--Section description-->
    

    <div class="row">

        <!--Grid column-->
        <div class="col-md-9 mb-md-0 mb-5">
            <form id="contact-form" name="contact-form" data-netlify="true" method="POST">

                <!--Grid row-->
                <div class="row">

                    <!--Grid column-->
                    <div class="col-md-6 ay1" >
                        <div class="md-form mb-0" >
                            <label for="name" class="">Vaše ime:</label>
                            <input type="text" id="name" name="name" class="form-control" required>
                            
                        </div>
                    </div>
                    <!--Grid column-->

                    <!--Grid column-->
                    <div class="col-md-6 ay2">
                        <div class="md-form mb-0">
                            <label for="email" class="">Vaš e-mail:</label>
                            <input type="text" id="email" name="email" class="form-control" required>
                            
                        </div>
                    </div>
                    <!--Grid column-->

                </div>
                <!--Grid row-->

                <!--Grid row-->
                <div class="row">
                    <div class="col-md-12 ay3">
                        <div class="md-form mb-0">
                            <label for="exampleFormControlSelect1" class="mt-2">Odaberite vrstu vašeg upita:</label>
                            <select class="form-control" id="exampleFormControlSelect1" required>
                              <option></option>
                              <option>Savjet vezan uz zemljišno-knjižne odnose</option>
                              <option>Upit vezan za katastar nekretnina</option>
                              <option>Izrada projektne dokumentacije</option>
                              <option>Projektiranje</option>
                              <option>Snimanje iz zraka</option>
                              <option>Ostalo</option>
                            </select>
                          </div>
                    </div>
                </div>
                <!--Grid row-->

                <!--Grid row-->
                <div class="row">

                    <!--Grid column-->
                    <div class="col-md-12 ay4">

                        <div class="md-form">
                            <label for="message" class="mt-2">Poruka:</label>
                            <textarea type="text" id="message" name="message" rows="2" class="form-control md-textarea" required></textarea>
                            
                        </div>

                    </div>
                </div>
                <!--Grid row-->

            </form>

            <div class="text-center">
                
                <br>
                
                <a class="btn btn-primary-alpha mt-1 px-5 mb-3 ay6 text-bold" onclick="document.getElementById('contact-form').submit();">POŠALJI</a>
                <br>
            </div>
            
            
            
        </div>
        <!--Grid column-->

        <!--Grid column-->
        <div class="col-md-3 text-center ay5">
            <ul class="list-unstyled mb-0">
                <li><i class="fas fa-map-marker-alt fa-2x"></i>
                    <p>Županijska 4, Požega, Hrvatska</p>
                </li>

                <li><i class="fas fa-phone mt-4 fa-2x"></i>
                    <p>091/540-22-65</p>
                </li>

                <li><i class="fas fa-envelope mt-4 fa-2x"></i>
                    <p>info@geometricus.hr</p>
                </li>
            </ul>
        </div>
        <!--Grid column-->

    </div>
    </div>
</section>
